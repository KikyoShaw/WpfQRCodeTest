<Window x:Class="WpfQRCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfQRCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <StackPanel Margin="20">
        <Grid Height="240" Width="240" Background="Bisque">
            <Image x:Name="QrCodeImage" Height="140" Width="140" Stretch="Fill"/>
        </Grid>
        <TextBox x:Name="UrlTextBox" FontSize="14" Height="30" Margin="10 20 10 0" VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="45" Width="75" Content="二维码" Margin="0 20 0 0" Click="ButtonBase_OnClick"/>
            <Button Height="45" Width="75" Content="新二维码" Margin="20 20 0 0" Click="ButtonBase1_OnClick"/>
        </StackPanel>
    </StackPanel>

</Window>
